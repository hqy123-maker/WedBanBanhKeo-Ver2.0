generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String    @unique
  password  String
  role      Role      @default(USER)
  status    Status    @default(ACTIVE)
  orders    Order[]
  carts     Cart[]
  payments  Payment[]
  comments  Comment[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  price       Float
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
  description String?
  stock       Int       @default(0)
  imageUrl    String    @default("https://example.com/default.jpg")
  carts       Cart[]
  orderDetails OrderDetail[]
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Order {
  id          Int           @id @default(autoincrement())
  user        User          @relation(fields: [userId], references: [id])
  userId      Int
  totalPrice  Float
  status      OrderStatus   @default(PENDING)
  orderDetails OrderDetail[]
  payments    Payment[]
  createdAt   DateTime      @default(now())
}

model OrderDetail {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  price     Float
}

model Cart {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int     @default(1)

  @@unique([userId, productId])
}

model Payment {
  id            Int        @id @default(autoincrement())
  order         Order      @relation(fields: [orderId], references: [id])
  orderId       Int
  user          User       @relation(fields: [userId], references: [id])
  userId        Int
  amount        Float
  paymentMethod PaymentMethod
  status        PaymentStatus @default(PENDING)
  createdAt     DateTime    @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  comment   String?
  rating    Int?
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  BLOCKED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELED
}

enum PaymentMethod {
  CREDIT_CARD
  PAYPAL
  BANK_TRANSFER
  COD
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}